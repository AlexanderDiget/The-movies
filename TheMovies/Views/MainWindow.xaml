<Window x:Class="TheMovies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMovies"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox ItemsSource="{Binding BookingsVM, UpdateSourceTrigger=PropertyChanged}" Width="460" Height="400" Margin="0,0,700,0"/>
        <ListBox ItemsSource="{Binding MoviesVM, UpdateSourceTrigger=PropertyChanged}" Width="460" Height="400" Margin="0,0,-700,0"/>
        <Button Content="Tilføj Booking" HorizontalAlignment="Left" Margin="525,348,0,0" VerticalAlignment="Top" Height="46" Width="93" Click="AddBookingClick"/>
        <Button Content="Slet Booking" HorizontalAlignment="Left" Margin="660,348,0,0" VerticalAlignment="Top" Height="46" Width="93"/>

    </Grid>
</Window>
